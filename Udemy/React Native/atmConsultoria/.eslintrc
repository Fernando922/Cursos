{
  "env": {
      "browser": true,
      "es6": true
  },
  "parser": "babel-eslint",
  "extends": [
      "eslint:recommended"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "react"
  ],
  "rules": {
      "indent": [
          "error",
          2
      ],
      "quotes": [
          "error",
          "single"
      ],

      "semi": [
        "error",
        "never"
      ],
      "react/jsx-indent": [
        "error",
        2
      ],
      "no-unused-vars": "off",
      "no-constant-condition": "off",
      "no-console": "off",
      "no-undef": "off"
  }
}