<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/item_lista_contato_imagem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/ic_action_camera"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/item_lista_contato_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Nome Contato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_lista_contato_imagem"
        app:layout_constraintTop_toTopOf="@+id/item_lista_contato_imagem" />

    <TextView
        android:id="@+id/item_lista_contato_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="E-mail Contato"
        app:layout_constraintBottom_toBottomOf="@+id/item_lista_contato_imagem"
        app:layout_constraintEnd_toEndOf="@+id/item_lista_contato_nome"
        app:layout_constraintStart_toStartOf="@+id/item_lista_contato_nome"
        app:layout_constraintTop_toBottomOf="@+id/item_lista_contato_nome" />

</androidx.constraintlayout.widget.ConstraintLayout>